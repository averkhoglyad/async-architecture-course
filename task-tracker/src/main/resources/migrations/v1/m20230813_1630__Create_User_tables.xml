<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property name="changesVersion" value="v1:20230813_1630" global="false"/>

    <changeSet author="averkhoglyad" id="${changesVersion}-Create_User_table">
        <createTable tableName="user">
            <column name="id" type="${uuidType}">
                <constraints primaryKey="true" primaryKeyName="PK_user" nullable="false"/>
            </column>
            <column name="login" type="${stringType}">
                <constraints nullable="false" unique="true" uniqueConstraintName="UC_user_login"/>
            </column>
            <column name="name" type="${stringType}">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="averkhoglyad" id="${changesVersion}-Create_admin_User">
        <insert tableName="user">
            <column name="id">ac5780b9-472d-4ca8-b5c4-d56b61a8f5c1</column>
            <column name="login">admin</column>
            <column name="name">Administrator</column>
            <column name="role">ADMIN</column>
        </insert>
        <insert tableName="user">
            <column name="id">1e0a2da5-751a-4e8b-b224-529b1bf4e1b1</column>
            <column name="login">user</column>
            <column name="name">User</column>
            <column name="role">USER</column>
        </insert>
        <insert tableName="user">
            <column name="id">c21e1817-32f3-4602-804f-5345fec50517</column>
            <column name="login">manager</column>
            <column name="name">Manager</column>
            <column name="role">MANAGER</column>
        </insert>
        <rollback>
            <delete tableName="user">
                <where>
                    id IN ('ac5780b9-472d-4ca8-b5c4-d56b61a8f5c1', '1e0a2da5-751a-4e8b-b224-529b1bf4e1b1', 'c21e1817-32f3-4602-804f-5345fec50517')
                </where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>